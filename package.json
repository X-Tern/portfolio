{
  "name": "portfolio-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "bootstrap": "npm --workspaces install",
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:client": "npm --workspace apps/client run dev",
    "dev:server": "npm --workspace apps/server run dev",
    "build": "npm-run-all build:client",
    "build:client": "npm --workspace apps/client run build",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}